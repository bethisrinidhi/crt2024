TREASURE HUNTER 4(hackerrank):

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
   int a,b,c;
    scanf("%d%d%d",&a,&b,&c);
    int r=a*(b)/100;
    printf("%d\n",r);
    int r1=(a-r)*(c)/100;
    printf("%d\n",r1);
    int r2=(a-r-r1)/3;
    printf("%d",r2);
    return 0;
}
