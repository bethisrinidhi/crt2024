#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
int p,ri,y;
    scanf("%d%d%d",&p,&ri,&y);
    float intrst=(p*ri*y)/100;
    printf("%.2f\n",intrst);
    float amt=p+intrst;
    printf("%.2f\n",amt);
    float dis=(intrst)*2/100;
    printf("%.2f\n",dis);
    float lastamt=amt-dis;
    printf("%.2f\n",lastamt);
    
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
